{
  "manifest_version": 2,
  "name": "Agrega Bloques",
  "version": "1.0",
  "description": "Extensi√≥n para insertar bloques predefinidos en campos de texto en ChatGPT y Deepseek",
  "icons": {
    "48": "icons/icon.png",
    "96": "icons/icon.png"
  },
  "background": {
    "scripts": ["extension.js"],
    "persistent": false
  },
  "permissions": [
    "storage",
    "*://*.chat.openai.com/*",
    "*://*.deepseek.com/*"
  ],
  "browser_action": {
    "default_icon": "icons/icon.png",
    "default_popup": "popup/popup.html",
    "default_title": "Agrega Bloques"
  },
  "content_scripts": [{
    "matches": [
      "*://*.chat.openai.com/*",
      "*://*.deepseek.com/*"
    ],
    "js": ["content_scripts/content.js"]
  }]
}