{
  "manifest_version": 2,
  "name": "Agrega Bloques",
  "version": "1.1",
  "description": "Extensi√≥n para insertar bloques predefinidos en cualquier campo de texto, similar a Grammarly o Blaze.",
  "icons": {
    "48": "icons/icon.png",
    "96": "icons/icon.png"
  },
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },
  "permissions": [
    "storage",
    "contextMenus",
    "activeTab",
    "<all_urls>"
  ],
  "browser_action": {
    "default_icon": "icons/icon.png",
    "default_popup": "popup/popup.html",
    "default_title": "Agrega Bloques"
  },
  "content_scripts": [{
    "matches": ["<all_urls>"],
    "js": ["content_scripts/content.js"]
  }]
}